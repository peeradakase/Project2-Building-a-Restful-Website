<%- contentFor('scripts') %>
  <script>
    function getNewArrivalProduct() {
      axios
      .get('/api/products/new-arrival')
      .then((result) => {
        //reult.data.images
        // 1. Show New arrival product image
        console.log('result: ',result)
        const { data: { images, id } } = result;
        console.log('images: ',images)
        const productImage = images[0];


        if (productImage) {
          $('#new-arrival-product-image').append(`<img src="${productImage.url}" alt="">`)
        }

        // 2. Change new arrival product link
        $('#new-arrival-link').attr('href', `products/${id}`)
      });
    }

    function getBestSellerProducts() {
      // get Best Seller Products
      axios
        .get('/api/products/best-seller')
        .then((result) => {
          // data is best seller products
          const { data } = result;
          data.forEach((product) => {
            const { id, images, name, price } = product;
            $('#best-sellers-row').append(`
            <div class="col">
              <a class="black-text" href="products/${id}">
                <div class="box-image-1-best-sellers">
                  <div>
                    <img
                      width="500"
                      height="600"
                      src="${images[0].url}"
                      alt="image-1"
                    />
                  </div>
                  <div class="m-13 text-top-1-best-sellers">
                    <h5>${name}</h5>
                    <h6>${price} HKD</h6>
                  </div>
                </div>
              </a>
            </div>
            `)

          })
        })
    }

    getNewArrivalProduct();
    getBestSellerProducts();
  </script>
